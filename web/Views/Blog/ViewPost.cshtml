@model Thyme.Web.ViewModels.BlogPost_vm

@{
    ViewBag.Title = Model.BlogPost.Title;  
}
@section Styles{
    <link href="@Url.Content("~/Styles/Post.css")" type="text/css" rel="stylesheet" />
}
<h1>@Html.RouteLink(Model.BlogPost.Title, "BlogPost", new { slug = Model.BlogPost.UrlSlug })</h1>
<h4>@Model.BlogPost.PublishedOn.PrettyFormat()</h4>
@Html.Markdown(Model.BlogPost.Body)
<br />
<h3>Comments?</h3>
Tweet me a comment about this post.<br />
<a href="https://twitter.com/intent/tweet?screen_name=philoushka" class="twitter-mention-button" data-size="large">Tweet to @@philoushka about this blog post</a>

@model Thyme.Web.ViewModels.BlogPost_vm

@{
    ViewBag.Title = Model.BlogPost.Title;  
}
@section Styles{
    <link href="@Url.Content("~/Styles/Post.css")" type="text/css" rel="stylesheet" />
}
<h1>@Html.RouteLink(Model.BlogPost.Title, "BlogPost", new { slug = Model.BlogPost.UrlSlug })</h1>
<h4>@Model.BlogPost.PublishedOn.PrettyFormat()</h4><br />
<p>
    @Html.Markdown(Model.BlogPost.Body)
</p>
<br />
<h3>Comments</h3>
<a href="http://twitter.com/philoushka">Tweet me a comment about this post.</a>
